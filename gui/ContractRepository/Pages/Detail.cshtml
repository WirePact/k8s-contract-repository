@page "{contractId}"
@model ContractRepository.Pages.Detail

<a asp-page="Index">back</a>
<h1>Contract Detail</h1>

<div>
    <span>ID</span>
    <span>@Model.Contract.Id</span>
</div>

<div>
    <form method="post" asp-page-handler="DeleteContract">
        <input type="hidden" name="id" value="@Model.Contract.Id" />
        <button type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            delete contract
        </button>
    </form>
</div>

<div>
    @foreach (var participant in Model.Contract.Participants)
    {
        <div>
            <h5>@participant.Name</h5>
            <h6>Hash</h6>
            <code>@participant.Hash</code>
            <h6>Certificate Public Key</h6>
            <code class="whitespace-pre">@participant.PublicKey.ToStringUtf8()</code>
        </div>
    }
</div>
